<%= form_for([@book, @comment]) do |fc| %>

  <div> <%= fc.label :message, "Leave your comment:" %>  </div>

  <% if @rateable %>

  <%= fc.select :rate, [['None',0], ['Horrible',1], ['Bad',2], ['Regular',3], ['Good',5], ['Excelent',5] ], :default => :None %><br>

  <% end %>

  <%= fc.text_area :message %><br>

  <%= fc.submit %>
<% end %>
