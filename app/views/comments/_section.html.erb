<%= form_for([@book, @comment]) do |fc| %>

  <p> <%= fc.label :message, "Leave your comment:" %>  </p>
  <%= fc.select :rate, [['None',0], ['Horrible',1], ['Bad',2], ['Regular',3], ['Good',5], ['Excelent',5] ], :default => :Bad %><br>
  <%= fc.text_area :message %><br>

  <%= fc.submit %>
<% end %>
