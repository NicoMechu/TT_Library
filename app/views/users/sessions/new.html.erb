<h2 class ="index_header">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field clearfix">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'youremailg@mail.com' %>
  </div>

  <div class="field clearfix">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" , placeholder: 'youremailg@mail.com' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field clearfix">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
 
