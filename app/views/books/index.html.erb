<h2> Books </h2>
<ul>
  <% @books.each do |b| %> 
  
    <li><%= link_to b.title, b %>      
      <% if user_signed_in? %>
        <%=  link_to 'Request', book_requests_path(b), method: :post  %>
      <% end %>
    </li>
    
  <% end %>
</ul> 

<% if @books.size == 0 %>
  <p>There are no books to show</p>
<% end %>
